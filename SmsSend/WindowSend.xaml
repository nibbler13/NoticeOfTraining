<Window x:Class="SmsSend.WindowSend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmsSend"
        mc:Ignorable="d"
        Title="Отправка" Height="400" Width="500" WindowStartupLocation="CenterOwner" Background="#FFF0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" TextWrapping="Wrap" Margin="10,10,10,5"/>
        <ProgressBar x:Name="progressBar" Grid.Row="1" Margin="10,5" />
        <Button x:Name="buttonClose" Content="Закрыть" Grid.Row="2" Margin="10,5,10,10" Width="85" Click="buttonClose_Click" IsEnabled="False"/>
    </Grid>
</Window>

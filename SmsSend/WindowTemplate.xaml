<Window x:Class="SmsSend.WindowTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmsSend"
        mc:Ignorable="d"
        Title="Редактирование шаблона" 
        SizeToContent="Height" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" 
        Width="300" 
        Background="#FFF0F0F0">
    <StackPanel>
        <Label Content="Название:" 
               HorizontalAlignment="Center" 
               Margin="10,10,10,0"/>
        <TextBox Height="23" 
                 x:Name="textBoxName"
                 Text="{Binding TemplateItem.Name}" 
                 Margin="10,0,10,10"/>
        <Label Content="Текст сообщения:" 
               Margin="10,10,10,0" 
               HorizontalAlignment="Center"/>
        <TextBox Height="120" 
                 x:Name="textBoxMessage"
                 TextWrapping="Wrap" 
                 Text="{Binding TemplateItem.Message}" 
                 Margin="10,0,10,10" SpellCheck.IsEnabled="True"/>
        <Button x:Name="buttonSave" 
                Content="Сохранить" 
                Click="buttonSave_Click" 
                Margin="10" 
                IsEnabled="False"/>
    </StackPanel>
</Window>

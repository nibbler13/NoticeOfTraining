<Window x:Class="NoticeOfTraining.WindowTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoticeOfTraining"
        mc:Ignorable="d"
        Title="Редактирование шаблона" SizeToContent="Height" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Width="300" Background="#FFF0F0F0">
    <StackPanel>
        <Label Content="Название:" HorizontalAlignment="Center" Margin="10,10,10,0"/>
        <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Margin="10,0,10,10"/>
        <Label Content="Текст сообщения:" Margin="10,10,10,0" HorizontalAlignment="Center"/>
        <TextBox Height="120" TextWrapping="Wrap" Text="TextBox" Margin="10,0,10,10"/>
        <Button x:Name="buttonSave" Content="Сохранить" Click="buttonSave_Click" Margin="10"/>

    </StackPanel>
</Window>
